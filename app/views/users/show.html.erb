<div class="row justify-content-between mb-4">
  <div class="col-8">
    <div class="d-flex flex-row">
      <img src="<%= @user.gravatar_image %>?s=100" alt="<%= @user.name %>'s profile picture" width="100" height="100" />
      <div class="ms-3">
        <h2><%= @user.name %></h2>

        <p class="text-dark-emphasis"><%= @user.bio %></p>
      </div>
    </div>
  </div>
  <div class="col-4 text-end">
    <% if current_user.can_send_friend_request(@user) %>
      <%= button_to "Send friend request", add_friend_path, class: 'btn btn-primary', method: :put %>
    <% end %>
  </div>
</div>

  <% if @user.posts.length %>
    <%= render @user.posts %>
  <% else %>
    <p class="p-5 mb-4 bg-body-tertiary rounded-3">This user don't have any posts yet.</p>
  <% end %>

