<div class="row justify-content-between">
    <div class="col-8">
      <h2><%= @user.name %>'s profile</h2>

      <p class="text-dark-emphasis"><%= @user.bio %></p>
    </div>
    <div class="col-4 text-end">
      <% if current_user.can_send_friend_request(@user) %>
        <%= button_to "Send friend request", add_friend_path, class: 'btn btn-primary', method: :put %>
    <% end %>
    </div>
</div>

